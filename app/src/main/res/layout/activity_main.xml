<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic" />

    <Button
        android:id="@+id/btn_basic_no_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic No Title" />

    <Button
        android:id="@+id/btn_simple_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple List" />

    <Button
        android:id="@+id/btn_single_choice_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleChoice List" />

    <Button
        android:id="@+id/btn_simple_list_no_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple List No Title" />

    <Button
        android:id="@+id/btn_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input" />

    <Button
        android:id="@+id/btn_progress_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialog" />

    <Button
        android:id="@+id/btn_progress_dialog_no_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialog No Title" />

    <Button
        android:id="@+id/btn_progress_dialog_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialog Black" />

</LinearLayout>
